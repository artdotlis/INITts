#!/bin/sh
. "$(dirname "$0")/_/husky.sh"
PCO="$(dirname "$0")/../configs/dev/project.json"
NVM_DIR="$HOME/.nvm"
NPM="[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" && npm"

sed -i -E 's/(\"production\"\s*:)\s*[falstrue]+,/\1 true,/g' "$PCO"
git add "$PCO"

eval "$NPM" run-script build
eval "$NPM" run-script lint
