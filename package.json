{
    "name": "initts",
    "version": "0.1.0",
    "description": "Initial bare-bone TypeScript project.",
    "main": "public/initts/html/index.html",
    "engines": {
        "node": "^18.12",
        "npm": "^9.1"
    },
    "author": {
        "name": "Artur Lissin",
        "email": "artdotlis@pm.me"
    },
    "license": "The Unlicense",
    "repository": {
        "type": "git",
        "url": "git@github.com:artdotlis/INITts.git"
    },
    "keywords": [
        "typescript",
        "skeleton"
    ],
    "dependencies": {
        "@babel/core": "^7.22",
        "@babel/preset-env": "^7.22",
        "babel-loader": "^9.1",
        "copy-webpack-plugin": "^11.0",
        "css-loader": "^6.7",
        "html-webpack-plugin": "^5.5",
        "mini-css-extract-plugin": "^2.7",
        "ts-loader": "^9.4",
        "typescript": ">=5.0 <5.1",
        "webpack": "^5.83",
        "webpack-cli": "^5.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6",
        "@commitlint/config-conventional": "^17.6",
        "@types/node": "^18.16",
        "@typescript-eslint/eslint-plugin": "^5.59",
        "@typescript-eslint/parser": "^5.59",
        "commitizen": "^4.3",
        "cz-conventional-changelog": "^3.3",
        "eslint": "^8.39",
        "eslint-config-airbnb-base": "^15.0",
        "eslint-config-airbnb-typescript": "^17.0",
        "eslint-config-prettier": "^8.8",
        "eslint-import-resolver-typescript": "^3.5",
        "eslint-plugin-import": "^2.27",
        "eslint-plugin-prettier": "^4.2",
        "husky": "^8.0",
        "jest": "^29.5",
        "lint-staged": "^13.2",
        "prettier": "^2.8",
        "shellcheck": "^2.2",
        "ts-prune": "^0.10",
        "tslint-config-prettier": "^1.18"
    },
    "scripts": {
        "postinstall": "if [ \"$NODE_ENV\" != 'production' ]; then npm run hook; fi",
        "hook": "husky install",
        "build:ts": "rm -rf src/initts/js/* && tsc -p configs/dev/tsconfig.json --pretty",
        "build:wp": "rm -rf public/* && webpack --config configs/dev/webpack-config.js",
        "build": "npm run build:wp",
        "cz": "cz",
        "lint": "lint-staged",
        "lint:prune": "ts-prune -i src/initts/ts",
        "lint:commit": "commitlint -g configs/dev/commitlint.cjs --edit ${1}",
        "lint:shell": "shellcheck bin/deploy/*.sh bin/*.sh",
        "lint:eslint": "eslint -c configs/dev/eslintrc.json src/initts/ts",
        "lint:prettier": "prettier --config configs/dev/prettierrc.cjs --ignore-path configs/dev/prettierignore -c src/"
    },
    "lint-staged": {
        "*src/initts/ts/**/*.{ts,tsx}": [
            "eslint -c configs/dev/eslintrc.json --fix"
        ],
        "*.{js,jsx,ts,tsx,html,css,md,json,yml,yaml}": [
            "prettier --config configs/dev/prettierrc.cjs --ignore-path configs/dev/prettierignore --write"
        ],
        "*.sh": [
            "shellcheck"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "type": "module"
}
